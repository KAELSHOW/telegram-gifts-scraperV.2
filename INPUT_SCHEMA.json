{
  "title": "Telegram Gifts Scraper",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "fragmentUrl": {
      "title": "Fragment URL",
      "type": "string",
      "description": "Ссылка на страницу Fragment с подарками",
      "default": "https://fragment.com/gifts",
      "editor": "textfield"
    },
    "maxItems": {
      "title": "Максимум подарков",
      "type": "integer",
      "description": "Сколько подарков собрать",
      "default": 50,
      "editor": "number"
    },
    "includeRare": {
      "title": "Включать редкие?",
      "type": "boolean",
      "description": "Собирать ли редкие подарки",
      "default": true,
      "editor": "checkbox"
    },
    "saveImages": {
      "title": "Сохранять картинки?",
      "type": "boolean",
      "description": "Добавлять ли ссылки на изображения подарков",
      "default": false,
      "editor": "checkbox"
    },
    "outputFormat": {
      "title": "Формат вывода",
      "type": "string",
      "description": "Формат сохранённых данных",
      "default": "json",
      "editor": "select",
      "enum": ["json", "csv", "xlsx"]
    }
  }
}
