{
  "title": "Fragment Gifts Scraper",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "fragmentUrl": {
      "title": "Fragment URL",
      "type": "string",
      "description": "Ссылка на страницу с подарками Fragment",
      "default": "https://fragment.com/gifts",
      "editor": "textfield"
    },
    "maxItems": {
      "title": "Максимум подарков",
      "type": "integer",
      "description": "Сколько подарков собрать за один запуск",
      "default": 50,
      "minimum": 1,
      "maximum": 500,
      "editor": "number"
    },
    "includeRare": {
      "title": "Включать редкие подарки?",
      "type": "boolean",
      "description": "Если выключить, редкие подарки не будут собираться",
      "default": true,
      "editor": "checkbox"
    },
    "saveImages": {
      "title": "Сохранять изображения?",
      "type": "boolean",
      "description": "Сохранять ссылки на изображения подарков",
      "default": false,
      "editor": "checkbox"
    },
    "outputFormat": {
      "title": "Формат вывода",
      "type": "string",
      "description": "В каком формате сохранить результат",
      "default": "json",
      "enum": ["json", "csv"],
      "editor": "select"
    }
  },
  "required": ["fragmentUrl"]
}
